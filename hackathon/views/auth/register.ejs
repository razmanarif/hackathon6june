<div class="row mt-4">
    <h1 class="text-center">Register</h1>
    <div class="col-4 mx-auto">
        <form action="/auth/register" method="post" enctype="multipart/form-data">
            <div class="col mb-3">
                <input class="form-control" type="text" placeholder="firstName" name="firstName">
            </div>
            <div class="col mb-3">
                <input class="form-control" type="text" placeholder="lastName" name="lastName">
            </div>
            <div class="col mb-3">
                <input class="form-control" type="date" name="dateOfBirth">
            </div>
            <div class="col mb-3">
                <input class="form-control" type="phone" placeholder="phone number" name="phone">
            </div>
            <div class="col mb-3">
                <input class="form-control" type="address" placeholder="address" name="address">
            </div>
            <div class="col mb-3">
                <input class="form-control" type="email" placeholder="email" name="email">
            </div>
            <div class="col mb-3">
                <input class="form-control" type="file" name="profilePicture">
            </div>
            <div class="col mb-3">
                <input class="form-control" type="password" placeholder="password" name="password">
            </div>
            <div class="col mb-3"></div>
            <select name="userType" class="form-control">
                <option value="helper">Helper</option>
                <option value="senior">Senior</option></select>
            </div>
            <div class="d-grid gap-2 col">
                <button class="btn btn-danger" type="submit">Register</button>
            </div>
            

        </form>
    </div>
</div>